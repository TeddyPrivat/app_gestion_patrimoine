// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id         String       @id @default(uuid())
  email      String       @unique
  password   String
  nom       String
  createdAt  DateTime     @default(now())
  users      User[]
  patrimoines Patrimoine[]
  transactions Transaction[]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  emailHash String   @unique
  password  String
  nom       String
  prenom    String
  role      String?
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
}

model Patrimoine {
  id            String        @id @default(uuid())
  nom           String
  type          String
  valeurEstimee Float
  localisation  String
  tenantId      String
  tenant        Tenant        @relation(fields: [tenantId], references: [id])
  transactions  Transaction[]
}

model Transaction {
  id            String      @id @default(uuid())
  montant       Float
  date          DateTime
  type          String
  description   String?
  patrimoineId  String
  patrimoine    Patrimoine @relation(fields: [patrimoineId], references: [id])
  tenantId      String
  tenant        Tenant     @relation(fields: [tenantId], references: [id])
}
